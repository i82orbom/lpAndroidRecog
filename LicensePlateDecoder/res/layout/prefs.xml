<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
 

 <PreferenceCategory
   android:summary="Country Decoding"
   android:title="@string/prefsTitle" >
   
  <CheckBoxPreference
     android:key="isAutomatic"
     android:summary="@string/automaticCheckBoxSummary"
     android:title="@string/automaticCheckBoxTitle" />
 
  
  <ListPreference
     android:entries="@array/listCountries"
     android:entryValues="@array/listCountryValues"
     android:key="selectedDecodeCountry"
     android:summary="@string/currentCountrySummary"
     android:title="@string/currentCountryTitle" />
  
 </PreferenceCategory>
 
 
</PreferenceScreen>
